<div class="w-full flex items-center justify-center py-6">
  <%= link_to "new item", new_item_path, data: { "turbo-frame": "_top" }, class: 'text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded' %>
</div>

<% @items.each do |item| %>
  <div>
    description: <%= item.description %> - state: <%= item.state %> ||
    <% if can? :manage, item %>
      <%= link_to t('edit'), edit_item_path(item) %> ||
      <%= button_to t('delete'), item_path(item), method: :delete, form: { data: { turbo_confirm: t('confirm_delete') } } %>
    <% end %>
  </div>
<% end %>
